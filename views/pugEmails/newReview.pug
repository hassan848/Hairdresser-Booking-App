extends homeEmail

block content
    p Dear #{firstName},
    - if(recepientFor === 'client')
        p You completed your appointment with #{bookingInfo.hairdresser.name.split(' ')[0]}, <br>Therefore you are eligible to leave a review & rating by clicking the link below.
    - if(recepientFor === 'hairdresser')
        p A client (#{bookingInfo.client.name}) has recently left a rating/review about you, <br>Please see below or click the link to view the review.

    p <strong>Booking Id - </strong>#{bookingInfo._id}
    p <strong>Review Description: </strong> <i>"#{bookingInfo.addedReview.review}"</i>
    p <strong>Star Rating: #{bookingInfo.addedReview.starRating}</strong> 
        //- div(class="profile-star-rating" style=`--star-rating: ${bookingInfo.addedReview.starRating}`)
        //- <div class="profile-star-rating" style="--star-rating: 5"></div>

    table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
        tbody
            tr
                td(align='left')
                    table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                        tbody
                            tr
                                td
                                    a(href=`${url}`, target='_blank')='View Review & Booking'

    p - Hassan Aslam, CEO